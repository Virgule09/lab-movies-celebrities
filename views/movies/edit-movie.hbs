<h2>Edit a Movie</h2>

<form action="/movies/{{result._id}}" method="POST">
    <label> Title:
        <input type="text" name="title" value="{{result.title}}" />
    </label>

    <label> Genre:
        <input type="text" name="genre" value="{{result.genre}}" />
    </label>

    <label> Plot:
        <input type="text" name="plot" value="{{result.plot}}" />
    </label>


    <label> Cast:
        <select name="cast" id="cast" multiple>
            {{#each result.cast}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
        </select>
    </label>
    <button>Submit changes</button>
</form>